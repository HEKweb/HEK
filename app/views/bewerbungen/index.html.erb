<article>
  <h2>Bewerbungen</h2>
  <form action="<%= bewerbungen_path params %>" method="get" accept-charset="utf-8">
    <input type="hidden" name="sort_by" value="<%= params[:sort_by] %>" />
    <table>
      <thead>
        <tr>
          <th></th>
          <th>m/w</th>
          <th>Vorname</th>
          <th><%= sortable_link_to 'Nachname', 'nachname' %></th>
          <th>★</th>
          <th><%= sortable_link_to 'Semester', 'anzahl_abgeschlossener_fachsemester' %></th>
          <th>Frühestens</th>
          <th><%= sortable_link_to 'Wunsch', 'wunsch' %></th>
          <th>Spätestens</th>
          <th style="display: none">Staatsangehörigkeit</th>
          <th><%= sortable_link_to 'Bewertung', 'bewertung' %></th>
          <th>Zugesagt</th>
        </tr>
        <tr id="filter">
          <th></th>
          <th>
            <select name="geschlecht" onchange="this.form.submit()">
            <% {'' => '', 'm' => 'männlich', 'w' => 'weiblich'}.each do |name, value| %>
              <option value="<%= value %>" <%= 'selected' if params[:geschlecht] == value %>><%= name %></option>
            <% end %>
            </select>
          </th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="3">
            <input type="date" name="einzugsdatum" value="<%= params[:einzugsdatum] %>" />
          </th>
          <th style="display: none">
            <select name="staatsangehoerigkeit" onchange="this.form.submit()">
            <% {'' => '', 'deutsch' => 'deutsch', 'nicht deutsch' => 'nicht-deutsch'}.each do |name, value| %>
              <option value="<%= value %>" <%= 'selected' if params[:staatsangehoerigkeit] == value %>><%= name %></option>
            <% end %>
            </select>
          </th>
          <th>
            <input type="checkbox" class="bewertungen_zeigen" name="bewertungen_zeigen" value="t" <%= 'checked' if params[:bewertungen_zeigen] == 't' %> onclick="this.form.submit()" />
            <label for="bewertung_zeigen">zeigen</label>
          </th>
          <th>
            <select name="zugesagt" onchange="">
              <option value=""></option>
              <option value="t" <%= 'selected' if params[:zugesagt] == 't' %>>✓</option>
            </select>
          </th>
        </tr>
      </thead>
      <tbody>
      <% @bewerbungen.each_with_index do |bewerbung, i| %>
        <tr>
          <td class="thumb"><%= image_tag bewerbung.foto.url(:thumb) %></td>
          <td><%= bewerbung.geschlecht %></td>
          <td><%= bewerbung.vorname %></td>
          <td><%= bewerbung.nachname %></td>
          <td><%= bewerbung.alter %></td>
          <td><%= bewerbung.anzahl_abgeschlossener_fachsemester %></td>
          <td><%=l bewerbung.fruehestens unless bewerbung.fruehestens.nil? %></td>
          <td><%=l bewerbung.wunsch unless bewerbung.wunsch.nil? %></td>
          <td><%=l bewerbung.spaetestens unless bewerbung.spaetestens.nil? %></td>
          <td style="display: none"><%= bewerbung.staatsangehoerigkeit %></td>
          <td>
        <% if params[:bewertungen_zeigen] == 't' %>
            <ul class="bewertungen"<%= ' style="display: none;"'.html_safe unless params[:bewertungen_zeigen] == 't' %>>
          <% ApplicationController::USERS.map{|u| u[0]}.each do |u| %>
              <li class="bewertung-<%= (bewerbung.einzelbewertung u) || 'keine' %>" 
                  title="<%= u %>: <%= (bewerbung.einzelbewertung u) || 'nicht bewertet' %>">
              <% for i in [5, 4, 3, 2, 1] do %>
                <div class="<%= ((i > bewerbung.einzelbewertung(u)) ? 'empty-bar' : 'bar') unless bewerbung.einzelbewertung(u).blank? %>"></div>
              <% end %>
              </li>
          <% end %>
              <li class="gesamtbewertung" style="height: <%= (bewerbung.bewertung*24/5).round %>px; top: -<%= (bewerbung.bewertung*24/5).round %>px" title="<%= bewerbung.bewertung %>"></li>
            </ul>
        <% else %>
            <select class="bewertung" data-url="<%= bewerbung_bewertungen_url bewerbung %>"<%= ' style="display: none;"' if params[:bewertungen_zeigen] == 't' %>>
            <% 6.times do |j| %>
              <option value="<%= j %>" <%= 'selected' if bewerbung.einzelbewertung @user == j and bewerbung.bewertungen.exists?(:benutzer => @user) %>><%= j %></option>
            <% end %>
            </select>
        <% end %>
          </td>
          <td><%= '✓' if bewerbung.zugesagt? %></td>
          <% # Um eine Folge 'm's unterzubringen wäre länge 57 genau richtig -- aber bei 'normalem' Text sind dies zu wenige Zeichen. %>
          <td class="motivation"><%= truncate bewerbung.informationen, :length => 104, :separator => ' ' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </form>
</article>
